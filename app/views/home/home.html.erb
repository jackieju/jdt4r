
<style>
.row{
	height:30px;
}
.appname{
	width:100px;
	float:left;
}
.btn_bar{
	width: 300px;
	border:0px solid red;
}
.btn_bar_btn{
	float:right;
}
.left_btn_appname{
display: flex;
align-items: center;
min-height:40px;
border:0px solid red;
padding: 0px 10px 0px 20px;
white-space: nowrap;
overflow: hidden;
text-overflow: ellipsis;
color: rgb(195, 207, 216);
transition: transform 200ms ease 0s, opacity 200ms ease 0s;
flex-grow: 1;
flex-basis: 0%;
font-size: 13px;
text-align: left;
cursor: pointer;
line-height: 38px;
text-transform: none;
font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
text-rendering: optimizelegibility;
}
</style>
<div id="main" style="height:calc(100% - 23px);width:100%;border:1px solid green;">






<div id="left" style="float:left;width:200px;background:rgb(49, 55, 61);height:100%;">	
<% @apps.each{|app|
	
%>	


	<!--div class="app appname" onclick="window.location='/app?app=<%=app.name%>'" ><%=app.name%></div-->
	<div class="left_btn_appname" onclick="open_app('<%=app.name%>')" style="border:0px solid red;">
		<div style="float:left;margin-top:3px;">
			<img src="/images/Apps-48.png" style="max-height:20px;width:20px;"/>
		</div>
		<div style="float:left;margin-left:5px;">
			<%=app.name%>
		</div>
	</div>

	<div style="clear:both">
	</div>
<%}%>
</div><!-- left -->

<div id="right" style="float:left;width:calc(100% - 200px);background-color:red;height:100%;">
<iframe id="appframe" style="width:100%;height:100%;">
</iframe>
</div><!-- right -->

</div><!-- main -->

<script>

function open_app(appname){
alert(appname);
	$("iframe#appframe").attr("src", "/app?inframe=1&app="+appname);
}
</script>